				else if (tokens[0].equals("Rate"))
				{
					
				}
				else if (tokens[0].equals("Frames:"))
				{
					
				}
				else
				{
					
				}
			}
			else
			{
				Main.println("Error at " + animFile.toString() + ": " + "Invalid file header", Color.RED);
			}
